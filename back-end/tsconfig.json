{
  
  "compilerOptions": {
    
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node", 
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
